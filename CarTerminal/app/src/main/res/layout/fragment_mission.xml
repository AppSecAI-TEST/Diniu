<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/missionFrg_iv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y69"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_main"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/missionFrg_tabLayout"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y45"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y57"
            android:background="@drawable/bg_dialog"
            app:tabIndicatorColor="@color/d8"
            app:tabSelectedTextColor="@color/d8"
            app:tabTextAppearance="@style/TabLayoutTextStyle"/>

        <com.workapp.auto.carterminal.widget.NoScrollViewPager
            android:id="@+id/missionFrg_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/missionFrg_tabLayout"/>
    </RelativeLayout>

</LinearLayout>