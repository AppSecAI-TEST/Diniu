<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y22"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forgetPswAct_et_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:background="@drawable/line_et_bg"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forgetPswAct_et_check_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/y39"
            android:layout_weight="1"
            android:background="@drawable/line_et_bg"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <Button
            android:id="@+id/forgetPswAct_btn_check_code"
            android:layout_width="@dimen/x99"
            android:layout_height="@dimen/y39"
            android:background="@drawable/selector_bg_button"
            android:enabled="true"
            android:text="获取验证码"
            android:textColor="@drawable/selector_color_button_text"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/forgetPswAct_btn_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y39"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/selector_bg_button"
        android:enabled="false"
        android:text="@string/next"
        android:textColor="@drawable/selector_color_button_text" />

</LinearLayout>