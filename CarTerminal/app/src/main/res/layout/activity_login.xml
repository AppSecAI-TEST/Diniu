<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y90"
        android:src="@mipmap/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y28"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/loginAct_et_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:background="@drawable/line_et_bg"
            android:hint="请输入用户名"
            android:maxLength="11"
            android:text="cs"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/loginAct_et_psw"
            android:layout_width="0dp"
            android:layout_height="@dimen/y39"
            android:layout_weight="1"
            android:background="@drawable/line_et_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:text="111111"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y12"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginAct_tv_forgetPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/colorAccent"
            android:textSize="11sp" />

    </LinearLayout>

    <Button
        android:id="@+id/loginAct_btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y39"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y23"
        android:background="@drawable/selector_bg_button"
        android:enabled="false"
        android:text="登录"
        android:textColor="@drawable/selector_color_button_text" />

</LinearLayout>